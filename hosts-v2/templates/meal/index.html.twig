{% extends 'base.html.twig' %}

{% block title %}Meal index{% endblock %}

{% block body %}
    <h1>Meal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Price</th>
                <th>Capacity</th>
                <th>RemainingCapacity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td>{{ meal.id }}</td>
                <td>{{ meal.date ? meal.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ meal.price }}</td>
                <td>{{ meal.capacity }}</td>
                <td>{{ meal.remainingCapacity }}</td>
                <td>
                    <a href="{{ path('meal_show', {'id': meal.id}) }}">show</a>
                    <a href="{{ path('meal_edit', {'id': meal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meal_new') }}">Create new</a>
{% endblock %}
